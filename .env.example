# NFA Core 环境变量配置示例
# 复制此文件为 .env 并修改相应值

# Broker 配置
NFA_BROKER_LISTEN_ADDRESS=0.0.0.0:50051
NFA_BROKER_MAX_CONNECTIONS=1000
NFA_BROKER_HEARTBEAT_TIMEOUT=30

# 存储后端 (memory, redis, postgres)
NFA_STORAGE_BACKEND=memory

# Redis 配置
NFA_REDIS_URL=redis://localhost:6379
NFA_REDIS_PREFIX=nfa

# PostgreSQL 配置
NFA_POSTGRES_URL=postgres://user:password@localhost:5432/nfa
NFA_POSTGRES_TABLE_PREFIX=nfa_

# 调度器配置
NFA_SCHEDULER_POLICY=balanced
NFA_SCHEDULER_CHECK_INTERVAL=5
NFA_SCHEDULER_MAX_CONCURRENT=100

# 网络配置
NFA_NETWORK_TIMEOUT=10
NFA_NETWORK_RETRY_ATTEMPTS=3
NFA_NETWORK_RETRY_DELAY=1

# 日志配置
NFA_LOG_LEVEL=info
NFA_LOG_FORMAT=json
NFA_LOG_FILE=/var/log/nfa/core.log

# 监控配置
NFA_MONITORING_ENABLED=true
NFA_PROMETHEUS_PORT=9090
NFA_HEALTH_CHECK_PORT=8080

# 追踪配置
NFA_TRACING_ENABLED=true
NFA_JAEGER_ENDPOINT=http://localhost:14268/api/traces
NFA_SAMPLING_RATE=0.1

# 认证配置
NFA_AUTH_ENABLED=false
NFA_JWT_SECRET=change-me-in-production
NFA_TOKEN_EXPIRY=24

# 开发模式配置
NFA_DEV_HOT_RELOAD=true
NFA_DEV_DEBUG_ENDPOINTS=true
NFA_DEV_MOCK_SERVICES=false

# 高级配置
NFA_MAX_MESSAGE_SIZE=10485760
NFA_MAX_RETENTION_DAYS=30